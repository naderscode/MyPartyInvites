
@model IEnumerable<PartyInvites.Models.GuestResponse>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Responses</title>
</head>
<body>
    <p>
        <h2>Here are the people that will attend the party so far</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>

            </thead>
            <tbody>
                @foreach (PartyInvites.Models.GuestResponse r in Model) {
                <tr>
                <td>@r.Name</td>
                <td>@r.Email</td>
                <td>@r.Phone</td>
                </tr>
               }
            </tbody>
        </table>

</body>
</html>
